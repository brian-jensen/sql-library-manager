extends layout.pug
block title
  title Brian's SQL Library Manager
block content
  h1 Books
  p
    a.button(href="../books/new") Create New Book
  form(action="/books/search")
    input(type="search" name="term" placeholder="Search for a book")
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td
            a(href=`../books/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.year